#!/usr/bin/env php
<?php

require __DIR__.'/../vendor/autoload.php';

use AkeneoE3\Infrastructure\Command;
use AkeneoE3\Infrastructure\EtlFactory;
use AkeneoE3\Infrastructure\Profile\ConnectionProfileFactory;
use AkeneoE3\Infrastructure\Profile\EtlProfileFactory;
use AkeneoE3\Infrastructure\TransformRequest\TransformRequestFromInputFactory;
use Symfony\Component\Console\Application;

$etlFactory = new EtlFactory();

$requestFactory = new TransformRequestFromInputFactory(
    new ConnectionProfileFactory(),
    new EtlProfileFactory()
);

$application = new Application('AkeneoE3', '@package_version@');
$application->add(new Command\TransformCommand($etlFactory, $requestFactory));
$application->run();
